    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.16",
    "dotenv": "^16.0.0",
    "prettier": "^2.5.1",
    "tsc-watch": "^4.6.0",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
